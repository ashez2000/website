---
import Header from '../components/Header.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/a.png" />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white text-lg">
    <Header />
    <main class="max-w-2xl mx-auto px-3">
      <slot />
    </main>
  </body>
</html>
